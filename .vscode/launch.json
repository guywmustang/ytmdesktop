    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug YoutubeMusic Desktop App",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
            "windows": {
                "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
            },
            "args": [".", "NODE_ENV=development"],
            "runtimeArgs": [".", "--trace-warnings"],
            "outputCapture": "std"
        }
    ]
}
